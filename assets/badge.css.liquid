{% assign colors = settings.color_list | split: ',' %}

.badge{
  border: 0.5px solid;
  border-radius: 10px;
  max-height: 22px;
  font-size: 10px;
  padding: 0;
  
}

{% for color in colors %}
  {% assign colorValue = color | split: ' ' %}
  .badge.{{ colorValue | first }}{
    border-color: {{ colorValue | last }}
  }
  .badge.{{ colorValue | first }}>div>h5{
    margin:0;
    padding: 1px 10px
  }
{% endfor %} 



