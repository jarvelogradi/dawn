{{ 'products-gradi.css' | asset_url | stylesheet_tag }}
<script src="{{ 'checksDinamically.js' | asset_url }}" defer="defer"></script>


<div class="wrapper">
    <div>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a>Home</a>
        </li>
        <li class="breadcrumb-item">
          <a>Sections</a>
        </li>
        <li class="breadcrumb-item active">
          <a>{{ page.title | escape }}</a>
        </li>
      </ol>
    </div>

    <div class="row">
      {% for product in collections['test'].products %}
      <div class="col-4">
        <div class="content-product">
          <div class="box-product__image">
            <img class="product__image" src="{{ product.featured_media | image_url: width: 533 }}" width="100" height="100" loading="lazy"/>
          </div>
          <h2 style="margin: 5px 0px">{{ product.title }}</h2>
          <div>
            <form name="myChecks" class="products__variants">
              {% for variant in product.variants %}
                   {%- if variant.title != "Default Title" -%}
                    <label class="container">
                        <input type="radio" name="radioButton" value='{{ variant | json }}' onchange="handleChange(this);">
                        <span class="checkmark {% if variant.title == "Negro" %} black {% endif %} {% if variant.title == "Ocre" %} ocre {% endif %} {% if variant.title == "Terracota" %} terracota {% endif %} {% if variant.title == "Blanco" %} white {% endif %}"></span>
                    </label>
                   {%- endif -%}
              {% endfor %}
            </form>
          </div>
          <div class="text-ellipsis">
            <p>{{ product.description }}</p>
          </div>
          <h3 id="price{{ product.id }}" style="margin: 10px 0px">{{ product.price | money_with_currency }}</h3>
          <div class="box-content">
              <button class="btn btn-primary btn-outline">Add to Cart</button>
          </div>
        </div>
      </div>
      {%endfor%}

    </div>
</div>


